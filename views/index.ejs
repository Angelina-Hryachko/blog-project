<div class="author">
  <h1 class="author__heading"><%= locals.title %></h1>
  <p class="author__body"><%= locals.description %></p>
</div>

<div class="img-container">
  <img src="/img/hero-image.webp" alt="person looking out through window" class="hero-image" width="981" height="528">
</div>

<section class="articles">
  <h2 class="articles_heading">Latest Posts</h2>

  <ul class="article-ul">

    <% data.forEach(post => { %>
    
      <li>
        <a href="/post/<%= post._id %>">
          <span><%= post.title %></span>
          <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
        </a>
      </li>

    <% }) %>

  </ul>

  <% if (nextPage !== null) { %>
      <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>

  <% if (prevPage !== null) { %>
      <a href="/?page=<%= prevPage %>" class="pagination right">View New Posts &gt;</a>
  <% } %>

</section>